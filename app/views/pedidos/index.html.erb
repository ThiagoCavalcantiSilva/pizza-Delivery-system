<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>

  <thead>
    <tr>
      <th>Endereco</th>
      <th>Entregador</th>
      <th>Precototal</th>
      <th>Status</th>
      <th>Qtdpizzas</th>
      <th>Obs</th>
      <th>Nomedest</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.endereco.logradouro %></td>
        <td><%= pedido.entregador_id %></td>
        <td><%= pedido.precoTotal %></td>
        <td><%= pedido.status %></td>
        <td><%= pedido.qtdPizzas %></td>
        <td><%= pedido.obs %></td>
        <td><%= pedido.nomeDest %></td>
        <td><%= pedido.contato %></td>
        <td><%= link_to 'Show', pedido %></td>
        
        <%if current_user.adm%>
          <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
          <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

