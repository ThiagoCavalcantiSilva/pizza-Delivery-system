<p id="notice"><%= notice %></p>

<h1 class="text-center">Pedidos</h1>

<table class="table bg-dark">

  <thead class="text-center table-dark">
    <tr>
      <th>ID</th>
      <th>Endereco</th>
      <th>Entregador</th>
      <th>Precototal</th>
      <th>Status</th>
      <th>QuantidadePizzas</th>
      <th>Observacao</th>
      <th>Nomedestinatario</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr class="text-center table-warning">
        <td>p.<%= pedido.id %></td>
        <td><%= pedido.endereco.logradouro %></td>
        <td><%= pedido.entregador_id %></td>
        <td><%= pedido.precoTotal %></td>
        <td><%= pedido.status %></td>
        <td><%= pedido.quantidadePizzas %></td>
        <td><%= pedido.observacao %></td>
        <td><%= pedido.nomeDestinatario %></td>
        <td><%= pedido.contato %></td>
        <td><%= link_to 'Show', pedido, id:"S-#{pedido.id}", class: "btn btn-outline-dark" %></td>
        
        <%if current_user.adm%>
          <td><%= link_to 'Edit', edit_pedido_path(pedido), id:"e-#{pedido.id}", class: "btn btn-outline-dark" %></td>
          <td><%= link_to 'Destroy', pedido,  method: :delete, data: { confirm: 'Are you sure?' }, id:"D-#{pedido.id}", class: "btn btn-outline-dark" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Fazer um Pedido', new_pedido_path, class: "btn btn-outline-dark" %> 
<%= link_to 'Home', root_path, class: "btn btn-outline-dark" %>
