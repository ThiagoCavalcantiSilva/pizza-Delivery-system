<p id="notice"><%= notice %></p>

<h1>Sabors</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sabors.each do |sabor| %>
      <tr>
        <td><%= sabor.nome %></td>
        <td><%= sabor.preco %></td>
        <td><%= link_to 'Show', sabor %></td>
        <td><%= link_to 'Edit', edit_sabor_path(sabor) %></td>
        <td><%= link_to 'Destroy', sabor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

