<h1 class="text-center">Enderecos</h1>

<table class="table bg-dark" >
  <thead class="text-center table-dark">
    <tr>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th>Logradouro</th>
      <th>Complemento</th>
      <th colspan="4"> Opções</th>
    </tr>
  </thead>


  <tbody>
    <% @enderecos.each do |endereco| %>
      <%if endereco.user_id == current_user.id %>
        <tr class="text-center table-warning">
          <td><%= endereco.cep %></td>
          <td><%= endereco.cidade %></td>
          <td><%= endereco.bairro %></td>
          <td><%= endereco.logradouro %></td>
          <td><%= endereco.complemento %></td>
          <td><% User.find_by(id: endereco.user_id).nome%></td>
          <td><%= link_to 'Show', endereco, class: "btn btn-outline-dark" %></td>
          <td><%= link_to 'Edit', edit_endereco_path(endereco), class: "btn btn-outline-dark" %></td>
          <td><%= button_to 'Destroy', endereco, :method => :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark" %></td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Endereco', new_endereco_path, class: "btn btn-outline-dark" %> 
<%= link_to "Home", root_path, class: "btn btn-outline-dark" %>
